{
  "expo": {
    "name": "NFC Payment System",
    "slug": "nfc-payment-system",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#5046E5"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nfcpayments.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#5046E5"
      },
      "package": "com.nfcpayments.app",
      "permissions": [
        "NFC",
        "android.permission.NFC",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 33,
            "targetSdkVersion": 33,
            "buildToolsVersion": "33.0.0"
          }
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "androidPermission": "Allow NFC scanning"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "48a2cff7-148c-4848-8b88-01a79af5f722"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/48a2cff7-148c-4848-8b88-01a79af5f722"
    },
    "owner": "sir_galahad"
  }
}